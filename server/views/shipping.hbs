    <![endif]-->

</head>

<body>

	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    </div>
	
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img id="nav-logo" src="/img/logo.png" />
                <a id="nav-text" href="#">Sales Order Picking</a>
            </div>
            <!-- /.navbar-header -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="/choice"><i class="fa fa-plus-square fa-fw"></i> Criar picking waves</a>
                        </li>
                        <li>
                            <a href="/status"><i class="fa fa-clipboard fa-fw"></i> Estado das picking waves</a>
                        </li>
						<li>
                            <a href="/status-rep"><i class="fa fa-repeat fa-fw"></i> Estado das replenishment waves</a>
                        </li>
                        <li>
                            <a href="/shipping" class="active"><i class="fa fa-file-text fa-fw"></i> Guias de remessa</a>
                        </li>
                        <li>
                            <a href="/users"><i class="fa fa-users fa-fw"></i> Gestão de utilizadores</a>
                        </li>
                        <li>
                            <a href="/warnings" {{#if numWarnings}} class="blink" {{/if}}><i class="fa fa-warning fa-fw"></i> Notificações {{#if numWarnings}}<span class="badge">{{numWarnings}}</span>{{/if}}</a>
                        </li>
                        <li>
                            <a href="/options"><i class="fa fa-gear fa-fw"></i> Definições</a>
                        </li>
                        <li>
                            <form action="/logout" method="post">
                                <button type="submit"><i class="fa fa-sign-out fa-fw"></i> Terminar sessão</button>
                            </form>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Guias de remessa</h1>
					<h2>Série: {{serie}}, Filial: {{filial}}</h2>
                </div>
            </div>
                <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead class="sortable-header">
                                    <tr>
                                        <th align="center">Documento</th>
                                        <th align="center">Data limite de envio</th>
										<th align="center">Cliente</th>
                                        <th align="center">Guia de remessa</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each salesOrders}}
                                        <tr class="odd gradeX">
                                            <td align="center" class="pointer-cursor" data-toggle="modal" data-target="#myModal" data-id={{NumeroDocumento}}>{{NumeroDocumento}}</td>
											<td align="center" class="pointer-cursor" data-toggle="modal" data-target="#myModal" data-id={{NumeroDocumento}}>{{DataMinimaEncomenda}}</td>
                                            <td align="center" class="pointer-cursor" data-toggle="modal" data-target="#myModal" data-id={{NumeroDocumento}}>{{Cliente}}</td>
                                            <td align="center"><button class="shipping-button" data-id={{NumeroDocumento}} {{#unless ready}}disabled data-toggle="tooltip" title="Para gerar guias de remessa parciais use o ERP Primavera e remova o stock do armazém de expedição"{{/unless}}><i class="fa fa-file-text"></i></button></td>
                                        </tr>
                                    {{/each}}
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="/vendor/raphael/raphael.min.js"></script>
    <script src="/vendor/morrisjs/morris.min.js"></script>
    <script src="/data/morris-data.js"></script>

    <!-- DataTables JavaScript -->
    <script src="/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/vendor/datatables-responsive/dataTables.responsive.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="/dist/js/sb-admin-2.js"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
			
			 $('#myModal').on('show.bs.modal', function(e) {

                //get data-id attribute of the clicked element
                var id = $(e.relatedTarget).data('id');

                $.get('/partials/salesOrderToShip/' + id, function(data){
                    $('#myModal').html(data);
                }).fail(function() {
                    alert('Houve um erro a pedir informações sobre o produto'); // or whatever
                });
                //populate the textbox
                $(e.currentTarget).find('input[name="id"]').val(id);
            });
			
			$('.shipping-button').click(function() {
				console.log($(this).data('id'));
				$.ajax({
                    url:'/createShipping',
                    type:"POST",
                    contentType:"application/json; charset=utf-8",
                    data:JSON.stringify({nDoc: $(this).data('id')}),
                    success: function(){
                        alert('Guia de remessa criada com sucesso!');
						window.location.reload(true);
                    },
                    fail: function(err){
                        alert('Erro: ' + err.responseText);
                    }
                });
			});
        });
    </script>

</body>

</html>
